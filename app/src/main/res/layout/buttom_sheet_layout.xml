<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <android.support.v7.widget.AppCompatEditText
        android:hint="@string/text_email"
        android:id="@+id/edtTextAddress"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:maxLength="400"
        android:padding="5dp"
        app:counterEnabled="true" />


    <android.support.v7.widget.AppCompatEditText
        android:hint="@string/subject"
        android:layout_below="@+id/edtTextAddress"
        android:id="@+id/edtTextSubject"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:maxLength="400"
        android:padding="5dp"
        app:counterEnabled="true" />


    <android.support.v7.widget.AppCompatEditText
        android:hint="@string/text"
        android:layout_below="@+id/edtTextSubject"
        android:id="@+id/edtTextEmail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:maxLength="400"
        android:padding="5dp"
        app:counterEnabled="true" />


    <Button
        android:textStyle="normal"
        android:textSize="14sp"
        android:text="@string/send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edtTextEmail"
        android:id="@+id/btnSenadEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/btnSenadEmail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>